<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/img1_id"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/opet1"
        />
    <TextView
        android:id="@+id/text1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organized one place"
        android:layout_below="@+id/img1_id"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_secondary_variant"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/text2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work from home never gets easier, everything is ornganized in one place"
        android:layout_below="@+id/text1_id"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        />
    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="next"
        android:layout_below="@+id/text2_id"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/boxshape1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skip"
        android:textSize="23dp"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>